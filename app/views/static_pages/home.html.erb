<%# this is the body in application.hmtl.erb and inserts into <%= yield %/> code %>
<% provide(:title, "Stacks") %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<div class="center">
  <h1 class="lead large">Stacks</h1>

  <div class="container">
  	<div class="row">
      <div id="custom-search-input">
        <div class="input-group col-md-4 center">
          <input type="text" class="search-query form-control" placeholder="Enter a symbol or keyword" />
          <span class="input-group-btn">
            <button class="btn btn-danger" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
      </div>
  	</div>
  </div>
</div>

<div class="dashboard">
  <%= line_chart(@data1, id: "dow", title: "Dow Jones Industrial Average", colors: ["green"] ) %>
  <%= line_chart(@data2, id: "s&p", title: "S&P 500 Index", colors: ["red"] ) %>
  <%= line_chart(@data3, id: "nasd", title: "Nasdaq Composite", colors: ["blue"] ) %>
</div>

<div class="center padding">
  <button type="button" class="btn btn-default btn-lg"><%= link_to "Sign up now!", signup_url %></button>
</div>