<% provide(:title, "Sign up") %>

<div class="row margin background">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
  
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
  
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
  
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%# this has error messages that gets populated if there is a failed attempt at saving %>
      <%# using the sample_user.errors.full_messages object %>
      <%= render 'shared/error_messages' %>
      
      <div class="padding">
        <%= f.submit "Create my account", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
  
    
