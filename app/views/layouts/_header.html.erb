<header class="navbar navbar-fixed-top navbar-light bg-faded">
  <div id="logo" class="container">
    <nav>
      <a style="font-size:20px" class="lead" href="/">
        <i class="material-icons" style="font-size:36px" >multiline_chart</i>Stacks
      </a>

      <ul class="nav navbar-nav navbar-right">
        <button type="button" class="btn btn-default btn-md"><li><%= link_to "Home", root_path %></li></button>
        <button type="button" class="btn btn-default btn-md"><li><%= link_to "Help", help_path %></li></button>
        
